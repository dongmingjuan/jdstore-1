<div class="col-md-12">
  <div class="new group">
     <%= link_to("new group", new_admin_product_path, class: "btn btn-sm btn-primary pull-right") %>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Picture</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
      </tr>
    </thead>
    <body>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to(product.title, product_path(product))%></td>
          <td><%= product.description %></td>
          <td>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb, class: "thumbnail") %>
            <% else %>
               no picture
            <% end %>
          </td>
          <td><%= product.price %></td>
          <td><%= product.quantity %></td>
          <td>
            <%= link_to("Edit", edit_admin_product_path(product), class: "btn btn-xs btn-default")%>
            <%= link_to("Delete", admin_product_path(product), method: :delete, class: "btn btn-xs btn-default", data: { confirm: "Are you sure?"})%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
